
<%# <div data-controller="form"> %>
  <%= form_with url: pokemons_path, method: :get, html: { class: 'd-flex searchbar', data: { refresh_list_target: 'form' } } do |f|%>
  <%= f.text_field :query,

      class: "form-control",
      placeholder: "Find a pokemon",
      value: params[:query],
                     data: {
                      refresh_list_target: 'searchInput',
                      action: "keyup->refresh-list#update"
                    } %>
  <%= submit_tag "Search", class: "btn btn-search" %>
  <% end %>
<%# </div> %>

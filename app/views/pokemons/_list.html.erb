
 <div data-refresh-list-target="list" data-fitre-target="results" class="list-d" >
    <div class="all hidden" data-fitre-target="all">
      <% @pokemons.each do |pokemon| %>
        <div class="list-item">
          <%= link_to pokemon_path(pokemon), class:"list-name" do %>
            <%= image_tag("#{pokemon.sprites}") %>
            <div class="list-description">
              <p class="list-name"><%=pokemon.name%></p>
              <p class="list-order">No.<%=pokemon.order%></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>



<div class="poke-show">
<%= link_to pokemons_path do %><i class="fa-solid fa-arrow-left fa-return"> Return pokedex</i><% end%>

  <div class="desc-img">
    <div class="description-show">
        <p class="name"><%= @pokemon.name.upcase %></p>
      <div class="description_show-pokemon">
        <p class="d-description"> <strong>Weight:</strong> <br> <%= @pokemon.weight %> g</p>
        <p class="d-description"><strong>Height:</strong> <br> <%= @pokemon.height %> m</p>
        <p class="d-description"><strong>Order:</strong> <br> <%= @pokemon.order %></p>
        <p class="d-description"><strong>Types:</strong> <br> <%= @pokemon.types %></p>
      </div>

    </div>


  <% if @pokemon.types == "grass" %>
    <div id="card" class="container-img vert">
  <% elsif @pokemon.types == "fire" %>
    <div id="card" class="container-img rouge">
  <% elsif @pokemon.types == "water" %>
    <div id="card" class="container-img bleu">
  <% elsif @pokemon.types == "bug" %>
    <div id="card" class="container-img insecte">
  <% elsif @pokemon.types == "normal" %>
    <div id="card" class="container-img normal">
  <% elsif @pokemon.types == "poison" %>
    <div id="card" class="container-img poison">
  <% elsif @pokemon.types == "electric" %>
    <div id="card" class="container-img electric">
  <% elsif @pokemon.types == "ground" %>
    <div id="card" class="container-img ground">
  <% elsif @pokemon.types == "fairy" %>
    <div id="card" class="container-img fÃ©e">
  <% elsif @pokemon.types == "fighting" %>
    <div id="card" class="container-img combat">
  <% elsif @pokemon.types == "psychic" %>
    <div id="card" class="container-img psy">
  <% elsif @pokemon.types == "ghost" %>
    <div id="card" class="container-img spectre">
  <% else %>
      <div id="card" class="container-img">
  <% end %>
        <div class="img-show-pokemon">
          <%= image_tag("#{@pokemon.sprites}") %>
        </div>
      </div>
  </div>
</div>
